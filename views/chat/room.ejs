<%include ../partials/header%>
<div id="main-chat-container">
        <div class="row">
            <div class="col-md-2">
                <div class="container">
                    <a href="/chat" class="btn btn-primary mb-2">Go back to lobby</a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="container">
                    <h2 class="text-center"><strong><%=room.name%></strong></h2>
                </div>
            </div>
        </div>
    <div class="container">
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div id="output-window">
                        <ul id="output" class="list-group list-group-flush">
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div class="container input-container">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text" id="username"><strong><%=userInfo.username%></strong></div>
                            </div>
                            <textarea id="message" class="form-control input-md" rows="3" maxlength="120" minlength="1" placeholder="type your message here"></textarea>
                            <div class="input-group-append">
                                <button id="send" class="btn-warning btn-md"><strong>Send</strong></button>
                            </div>
                            <div id="word-counter">0/120</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
<script>
    let userInfo = <%-JSON.stringify(userInfo)%>;
    let room = <%-JSON.stringify(room)%>;
</script>
<script src="/scripts/chat.js"></script>

<%include ../partials/footer%>